             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App01_ControleXF.Controles.ButtonPage">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Primeiro Botão" 
                    TextColor="Blue"
                    FontSize="24"
                    BorderColor="Red"
                    BorderRadius="20"
