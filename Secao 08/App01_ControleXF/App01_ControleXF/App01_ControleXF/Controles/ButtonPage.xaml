                    BackgroundColor="White"/> 
            <Button Text="Segundo Botão"/>
            <Button BackgroundColor="Transparent" Image="push.png" HorizontalOptions="Start" IsVisible="False" Scale="0.1"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>