<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1_NossoChat.View.PaginaInicial"
             BackgroundColor="#5ED055">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Nosso Chat" TextColor="White"/>

            <StackLayout VerticalOptions="CenterAndExpand"
                         HorizontalOptions="CenterAndExpand">
                <Entry Placeholder="Nome" Text="{Binding Nome}" BackgroundColor="White" TextColor="#5ED055"/>
                <Entry Placeholder="Senha" Text="{Binding Senha}" BackgroundColor="White" TextColor="#5ED055"/>
                <Button BackgroundColor="Transparent" TextColor="White" Text="Acessar/Cadastrar"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>