<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1_Mimica.View.Resultado">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding Jogo.Grupo1.Nome}" FontSize="20"/>
            <Label Text="{Binding Jogo.Grupo1.Pontuacao}" FontSize="30" HorizontalOptions="Center" />

            <Label Text="{Binding Jogo.Grupo2.Nome}" FontSize="20"/>
            <Label Text="{Binding Jogo.Grupo2.Pontuacao}" FontSize="30" HorizontalOptions="Center" />

            <Button Text="Jogar outra vez" Command="{Binding JogarNovamente}"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>